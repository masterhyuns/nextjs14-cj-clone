{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx", // React와 함께 사용하는 경우
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs", // Jest는 CommonJS 모듈 시스템을 사용함
    "allowJs": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
